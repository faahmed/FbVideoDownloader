{
  "manifest_version": 2,

  "name": "Facebook video downloader",
  "version": "0.1",
  "author": "Fahd Ahmed",

  "description": "Allows users to download videos from Facebook",
  "icons": {}, //TODO: add icon

  "browser_action": {
      "default_popup":"popup.html"
  },

  "background": {
	"scripts": ["downloadvideos.js"]
  },

  "permissions": [
	      "activeTab",
        "webRequest",
	      "https://*.fbcdn.net/*",
        "declarativeContent"
  ],

  "optional_permissions": ["tabs"]
}
